// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongodb"]
}


model Anuncio {
  id String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name String
  ano_fabricacao String
  marca Marca @relation(fields: [marca_name], references:[name])
  marca_name String @default("Indefinido")
  modelo String
  versao String
  numero_portas String
  cor String
  cores_internas String
  combustivel String
  carroceria String
  potencia String
  transmissao String
  quilometragem String
  condicao String
  valor String
  chave_copia String
  laudo_cautelar String
  manual_do_proprietario String
  opcionais String[]
  data_de_criacao DateTime @default(now())
  image String[]
  slug String @unique
}


model Message {
  id String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name String
  email String
  whatsapp String
  mensagem String
  veiculo String?
  data_de_criacao DateTime @default(now())
}

model Marca {
  id String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name String @unique
  veiculos Anuncio[]
}